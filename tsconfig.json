{
    "compilerOptions": {
        "lib": [
            "es6"
        ],
        "target": "es6",
        "module": "commonjs",
        "types": [
            "reflect-metadata",
            "node"
        ],
        "declaration": true,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "baseUrl": ".",
        "outDir": "./dist",
        "paths": {}
    },
    "exclude": [
        "dist",
        "webpack",
        "tslint.json",
        "**/tests/*"
    ],
    "include": [
        "src/**/*",
    ]
}